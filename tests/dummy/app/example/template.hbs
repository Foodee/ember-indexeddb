<h1>
  Items
</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Created on
      </th>
      <th>
        Is Read
      </th>
      <th>
        Is Synced
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |item|}}
      <tr class="item" data-test-row>
        <td>
          {{item.date}}
        </td>
        <td data-test-is-read>
          {{item.isRead}}
        </td>
        <td data-test-is-synced>
          {{item.isSynced}}
        </td>
        <td>
          <button {{action 'markAsRead' item}} data-test-mark-as-read>
            Mark as read
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<button id="add-items" {{action 'fetchItems'}}>
  Fetch items from API
</button>

<button id="add-items" {{action 'addItem'}}>
  Add item locally
</button>

<button id="add-items" {{action 'syncItems'}}>
  Sync to server
</button>

<button id="reset-db" {{action 'resetDb'}}>
  Reset DB
</button>
